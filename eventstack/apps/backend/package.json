{
  "name": "@eventstack/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "testu": "vitest run --mode unit --coverage",
    "testi": "vitest run --mode integration --coverage",
    "test:coverage": "vitest run --coverage",
    "test:report": "npm run testu && node tests/Unit_test/scripts/exportCoveragePdf.mjs && npm run testi && node tests/Integration_test/scripts/exportCoveragePdf.mjs"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^6.12.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.23",
    "@vitest/coverage-v8": "^4.0.3",
    "bcryptjs": "^3.0.2",
    "puppeteer": "^24.26.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  }
}
